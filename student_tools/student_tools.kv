                        source: 'ic_action_tv.png'
                    Label:
                        size_hint_y: .6
                        color: .2, .5, 1, 1
                        text: 'View Result List'


<CalculatorPage>:
    name: 'calculator'


<GpCalculator>:
    name: 'calc_page'
    FloatLayout:
        BoxLayout:
            canvas.before:
                Color:
                    rgba: get_color_from_hex('#FF9966')
                Rectangle:
                    pos: self.pos
                    size: self.size

            orientation: 'vertical'
            BoxLayout:
                size_hint: (1, None)
                height: '50dp'
                ImgBtn:
                    size_hint: None, None
                    size: '40dp', '32dp'
                    on_release: root.manager.current = 'calculator_home'
                    source: 'arrow_back1.png'
                    pos_hint: {'center_x': .7, 'center_y': .5}

                Label:
                    text: 'Calculate GP'
                    font_size: '20dp'
                    bold: True
                    color: 1,1,1,1
                ImgBtn:
                    id: calc_option
                    on_release: #A bubble or something
                    size_hint: None, 1
                    size: '32dp', '32dp'
                    pos_hint: {'center_x': .3, 'center_y': .5}
                    source: 'ic_action_overflow.png'

            BoxLayout:
                size_hint: (1, None)
                height: '55dp'
                effect: Effects(self).add_shadow()
                Label:
                    text: 'Courses:'
                    color: 1,1,1,1
                    Image:
                        size_hint: (None, None)
                        x: self.parent.x +8
                        y: self.parent.y + 15
                        size: '24dp', '24dp'
                        source: 'ic_action_book.png'
                Label:
                    text: 'Units:'
                    color: 1,1,1,1
                    Image:
                        size_hint: (None, None)
                        x: self.parent.x +20
                        y: self.parent.y + 14
                        size: '24dp', '24dp'
                        source: 'ic_action_bookmark2.png'
                Label:
                    text: 'Grades:'
                    color: 1,1,1,1
                    Image:
                        size_hint: (None, None)
                        x: self.parent.x +11
                        y: self.parent.y + 14
                        size: '24dp', '24dp'
                        source: 'ic_action_ball.png'

            ScrollView:
                size_hint: (1, 1)
                size: self.size
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 1)
                    Rectangle:
                        pos: self.pos
                        size: self.size

                GridLayout:
                    height: self.minimum_height
                    id: grid_guy
                    size_hint_y: None
                    cols: 3
                    spacing: 10
                    padding: 10

            CustButton:
                size_hint: (None, None)
                height: '50dp'
                width: '100dp'
                on_release: root.get_values()
                pos_hint: {'center_x': .5}
                Image:
                    pos: self.parent.pos
                    size: self.parent.size
                    source: 'ic_action_tick.png'


        Button:
            size_hint: (None, None)
            size: ('40dp', '40dp')
            pos:  root.width-70, '60dp'
            on_release: root.add_btn()
            background_color: (.2, .5, 1, 0)
            background_normal: ''
            canvas:
                Color:
                    rgba: get_color_from_hex('#FF9966')
                Ellipse:
                    size: self.size
                    pos: self.pos
            Image:
                pos: self.parent.pos
                size: self.parent.size
                source: 'add.png'


