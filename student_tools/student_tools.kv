<MyDropDown@DropDown>:
	canvas.after:
		Color:
			rgba: .8,.8,.8,1
		Line:
			rounded_rectangle: [self.x, self.y, self.width, self.height,4]

<MySpinner@Spinner>:
    size_hint: (.6, .6)
    sync_height: True
    pos_hint: {'center_x': .5, 'center_y': .5}
    size_hint_y: None
    height:'50dp'
    background_normal: 'spinner.png'


<TimeTableButton>:
    drop_container: drop_container
    size_hint_y:  None
    height: '60dp'
    day: 'Monday'
    fold_anim: 'in_quad'
    drop_anim: 'out_bounce'
    BoxLayout:
        size: root.size
        pos: root.pos
        Label:
            canvas.before:
                Color:
                    rgba: get_color_from_hex('#FFE099')
                Ellipse:
                    size: [self.texture_size[0]+6]*2
                    pos: self.center_x-(self.texture_size[0]+6)/2, self.center_y-(self.texture_size[0]+6)/2
            size_hint_x: None
            width: '100dp'
            text: root.day[:3]
            font_size: '12dp'
            color: get_color_from_hex('#666666')
        Label:
            text_size: self.size
            halign: 'left'
            valign: 'center'
            text: root.day
            markup: True
    BoxLayout:
        id: drop_container
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos
