<Label>:
    font_name: 'comic'
	color: 0,0,0,1

<Result_Button>:
    size_hint: (1, None)
    height: '60dp'
    background_normal: ''
    background_color: (1, 1, 1, 1)
    gp: ''
    time: ''
    gp_values: []
    canvas.after:
        Color:
            rgba: .8, .8, .8, .6
        Line:
            points: [self.x+10, self.y, self.width-10, self.y]
            width: 1.5
    BoxLayout:
        size: self.parent.size
        pos: self.parent.pos
        Image:
            size_hint: (.2, 1)
            source: 'ic_action_box.png'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: root.gp
                font_size: '16dp'
                text_size: self.size
                valign: 'middle'
                halign: 'left'
                padding: '16dp', 0
                color: (.2, .2, .2, 1)
            Label:
                text: root.time
                id: sum_display
                font_size: '13dp'
                text_size: self.size
                valign: 'middle'
                halign: 'left'
                padding: '16dp', 0
                color: (.7, .7, .7, 1)
	BoxLayout:
		size_hint_y: None
		height: '40dp'
		FloatLayout:
			BorderButton:
				pos_hint: {'center_y':.5,'center_x':.7}
				size_hint: (None,None)
				size: '80dp','30dp'
				text: 'Delete'
				on_release: root.delete()
		FloatLayout:
			BorderButton:
				size_hint: (None,None)
				size: '80dp','30dp'
				pos_hint: {'center_y':.5,'center_x':.3}
				text: 'View'
				on_release: root.load()

<CustButton@Button>:
    background_normal: ''
    color: (1, 1, 1, 1)
    background_color: get_color_from_hex('#FF9966')

<TogBtn@ToggleButton>:
    background_normal: ''
    color: (1, 1, 1, 1)
    background_color: get_color_from_hex('#FF9966')
    allow_no_selection: False

<ImgBtn@Button>:
    source: ''
    background_normal: ''
    color: (1, 1, 1, 1)
    background_color: get_color_from_hex('#FF9966')

    Image:
        pos: self.parent.pos
        size: self.parent.size
        source: self.parent.source

<comfirm_pop>:
    title_font: '0dp'
    seperator_height: '0dp'
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Are sure you want to delete the whole list'
        BoxLayout:
            padding: 10
            spacing: 10
            CustButton:
                text: 'Cancel'
                on_release: root.dismiss()
            CustButton:
                text: 'Ok'
                background_color: (.2, .5, 1, 1)
                on_release: root.delete_all()


<Home_page>:
    name: 'home_page'
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: get_color_from_hex('#FF9966')
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            size_hint: (1, None)
            height: '50dp'
            ImgBtn:
                size_hint: None, 1
                size: '32dp', '32dp'
                on_release: app.root.toggle_state(True)
                source: 'ic_action_list.png'
                pos_hint: {'center_x': .7, 'center_y': .5}

            Label:
                text: 'Mahart'
                font_size: '22dp'
                text_size: self.size
                halign: 'center'
                valign: 'center'
                bold: True

        AndroidTabs:
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            anim_threshold: 0
            MyTab1:
                text: 'Time Table Generator'
                BoxLayout:
                    orientation: 'vertical'
                    CustButton:
                        on_release: root.manager.current ='lecture_page'
                        background_color: 1, 1, 1, 1
                        canvas.after:
                            Color:
                                rgba: get_color_from_hex('#FF996666')
                            Line:
                                points: [self.x, self.y, self.width, self.y]
                                width: 1.5

                        BoxLayout:
                            orientation: 'vertical'
                            size: self.parent.size
                            pos: self.parent.pos
                            Image:
                                source: 'ic_action_business (2).png'
                            Label:
                                size_hint_y: .6
                                color: .2, .5, 1, 1
                                text: 'Generate Lecture Time Table'
                    CustButton:
                        background_color: 1, 1, 1, 1
                        BoxLayout:
                            orientation: 'vertical'
                            size: self.parent.size
                            pos: self.parent.pos
                            Image:
                                source: 'ic_action_calendar_day.png'
                            Label:
                                size_hint_y: .6
                                color: .2, .5, 1, 1
                                text: 'Generate Exam Time Table'

            MyTab1:
                text: 'Time Table View'
                Label:
                    text: 'No Time Table Generated'
                    color: 0, 0, 0, .6


<CalculatorHome>:
    name: 'calculator_home'
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: get_color_from_hex('#FF9966')
            Rectangle:
