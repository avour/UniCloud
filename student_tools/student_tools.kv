<PasswordPop>
    size_hint: None, None
    size: '280dp', '180dp'
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            RoundedRectangle:
                pos: self.pos
                size: self.size
        Label:
            text_size: self.size
            valign: 'middle'
            halign: 'left'
            padding: '20dp', '30dp'
            text: 'Password'
            bold: True
            color: 0, 0, 0, 1
            canvas:
                Color:
                    rgba: 0,0,0,.6
                Line:
                    points: [self.x+6, self.y, self.width-6, self.y]
                    width: 1

        TextInput:
            size_hint_y: .7
            id: password_value
            multiline: False
            password: True
            background_normal: 'textinput_disabled.png'
            on_text_validate: root.comfirm_pass()

        Label:
            size_hint_y: 0.4
            text: "Defaults to 0000 "
            font_size: '12dp'
            italics: True
            id: password_state
            color: (0, 0, 0, 1)

        BoxLayout:
            size_hint_y: None
            height: '55dp'
            padding: 6
            Button:
                text: "Cancel"
                background_normal: ''
                on_release: root.dismiss()
                color: get_color_from_hex('#FF9966')
            Button:
                id: pass_btn
                text: 'Ok'
                color: get_color_from_hex('#FF9966')
                background_normal: ''
                on_release: root.comfirm_pass()


<CustLabel@Label>:
